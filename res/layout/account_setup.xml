<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TableLayout android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="1">
        <TableRow android:id="@+id/tableRow3" android:layout_margin="5dip" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_height="wrap_content" android:text="Username" android:id="@+id/label_username" android:layout_width="wrap_content" android:layout_marginRight="5dip"></TextView>
            <EditText android:id="@+id/username" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="Username"></EditText>
        </TableRow>
        <TableRow android:layout_height="match_parent" android:id="@+id/tableRow1" android:layout_margin="5dip" android:layout_width="match_parent">
            <TextView android:layout_height="wrap_content" android:text="Password" android:layout_width="wrap_content" android:id="@+id/label_password" android:layout_marginRight="5dip"></TextView>
            <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/password" android:password="true" android:hint="Password"></EditText>
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_gravity="right">
        <Button android:layout_width="wrap_content" android:id="@+id/button_cancel" android:layout_height="wrap_content" android:text="Cancel" android:onClick="cancel"></Button>
        <Button android:layout_width="wrap_content" android:id="@+id/button_done" android:layout_height="wrap_content" android:text="Done" android:onClick="done"></Button>
    </LinearLayout>
</LinearLayout>
