<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:text="Hello, Max Mustermann" android:layout_margin="3dip" android:id="@+id/userName" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp"></TextView>
    <View android:background="#ccc" android:layout_height="2dip" android:id="@+id/View01" android:layout_width="match_parent"></View>
    <TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:stretchColumns="1" android:layout_margin="3dip">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Kundennummer:" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp"></TextView>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="1234567" android:gravity="right" android:id="@+id/textView2" android:textSize="20sp"></TextView>
        </TableRow>
        <TableRow android:layout_marginTop="3dip" android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="wrap_content">
        	<TextView android:text="Telefonnummer:" android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp"></TextView>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="+49123456789012345" android:gravity="right" android:id="@+id/textView4" android:textSize="20sp"></TextView>
        </TableRow>
    </TableLayout>
    <View android:background="#ccc" android:layout_height="2dip" android:id="@+id/view1" android:layout_width="match_parent"></View>
</LinearLayout>
